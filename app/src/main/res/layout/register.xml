<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wideblank"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_begin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="15dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/authorization"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="6" />

    <TextView
        android:id="@+id/authorization"
        android:layout_width="184dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/authorization"
        android:textColor="@color/wolves_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn"
        app:layout_constraintVertical_weight="3" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/e_mail"
        android:textColor="@color/purple"
        app:layout_constraintBottom_toTopOf="@id/change_Email"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintTop_toBottomOf="@id/authorization"
        app:layout_constraintVertical_weight="1" />

    <EditText
        android:id="@+id/change_Email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple"
        android:hint="@string/example_email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/password"
        android:textColor="@color/purple"
        app:layout_constraintBottom_toTopOf="@id/edit_Password"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintTop_toBottomOf="@id/change_Email"
        app:layout_constraintVertical_weight="1" />

    <EditText
        android:id="@+id/edit_Password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/cardTextForgotPassword"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/cardTextForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/forgot_password"
        android:textColor="@color/wolves_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@id/edit_Password"
        app:layout_constraintVertical_weight="2" />

</androidx.constraintlayout.widget.ConstraintLayout>